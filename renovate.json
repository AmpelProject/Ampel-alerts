{
  "extends": [
    "config:base"
  ],
  "schedule": "monthly",
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["dev-dependencies"],
      "automerge": true,
      "groupName": "dev dependencies"
    },
    {
      "matchPackagePatterns": ["^ampel-.*"],
      "schedule": null,
      "automerge": true,
      "groupName": "ampel packages",
      "rangeStrategy": "bump"
    }
  ]
}
